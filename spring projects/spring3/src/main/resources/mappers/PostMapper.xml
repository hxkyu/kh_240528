<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.kh.spring3.dao.PostDAO">
	<select id="selectCommunityList" resultType="kr.kh.spring3.model.vo.CommunityVO">
		select * from community order by co_num
	</select>
	<select id="selectPostList" resultType="kr.kh.spring3.model.vo.PostVO">
		select * from post 
		where po_co_num = #{co_num}
		order by po_num desc
	</select>
</mapper>
